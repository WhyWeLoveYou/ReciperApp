<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_10sdp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_80sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/makanan2"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/namamakanan"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_87sdp"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:textAlignment="center"
        android:text="Nama Makanan"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_20sdp"
        android:id="@+id/alamatmakanan"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:text="Jl.Adi Sucipto No.56"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/second_text"
        android:layout_below="@id/namamakanan"
        android:gravity="center"/>

    <TextView
        android:id="@+id/hargamakanan"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/alamatmakanan"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Rp. 12.000"
        android:textAlignment="center"
        android:textSize="@dimen/_18sdp" />
    <Button
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/tambahmakanan"
        android:text="Tambah"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:layout_below="@id/hargamakanan"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        android:layout_below="@id/tambahmakanan"
        android:layout_marginTop="@dimen/_10sdp"
        />

</RelativeLayout>