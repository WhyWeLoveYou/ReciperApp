<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_12sdp"
    android:clickable="true"
    android:id="@+id/apa"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/namamakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_85sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        tools:text="Nama Makanan" />

    <TextView
        android:id="@+id/alamatmakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:textColor="@color/second_text"
        android:textSize="@dimen/_12ssp"
        tools:text="Jl.Adi Sucipto No.6" />

    <TextView
        android:id="@+id/hargamakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alamatmakanan"
        android:layout_marginLeft="@dimen/_85sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        tools:text="Rp. 12.000" />

</RelativeLayout>