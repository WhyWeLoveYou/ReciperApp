<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_marginTop="10dp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/imageview"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:Layout_centervertical="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namamakanan"
        android:layout_marginLeft="@dimen/_90sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        tools:text="Nama Makanan"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alamatmakanan"
        android:layout_marginLeft="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_21sdp"
        android:textColor="@color/second_text"
        android:textSize="@dimen/_14sdp"
        tools:text="Jl.Adi Sucipto No.6"
        />

    <TextView
        android:id="@+id/hargamakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namamakanan"
        android:layout_marginLeft="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_37sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        tools:text="Rp. 12.000" />
    <Button
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="Tambah"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_42sdp"
        android:layout_marginStart="@dimen/_220sdp"
        android:backgroundTint="@color/kuningnigga"
        android:onClick="Tambah"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:background="@color/black"
        />

</FrameLayout>